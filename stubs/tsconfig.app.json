{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "env.d.ts",
    "resources/ts/**/*",
    "resources/ts/**/*.vue"
  ],
  "exclude": [
    "resources/ts/**/__tests__/*"
  ],
  "compilerOptions": {
    "composite": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./resources/ts/*"
      ]
    }
  }
}
